<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%= metadata.title %></title>
    <link rel="stylesheet" href="main.css">
  </head>
  <body>
    <div class="top">
      <p class="date"><%= metadata.date %></p>
      <p class="title"><%= metadata.title %></p>
      <p class="course"><%= metadata.course %></p>
    </div>
    <!---------------------------------->
    <% content.forEach(item => { %>
      <%-renderer(item)%>
    <% }) %>
    <!---------------------------------->
    <script type="text/javascript">
      function taskButton(event) {
        console.log(event.currentTarget)
        event.currentTarget.parentElement.classList.toggle("done");
      }
      let pos = 0

      window.addEventListener("keydown", function(e) {
        if([32, 37, 38, 39, 40].indexOf(e.keyCode) > -1) {
            switch (e.keyCode) {
              case (40) :
                pos++;
                window.scrollTo(0, pos * window.innerHeight)
                break
              case (39) :
                pos--
                window.scrollTo(0, pos * window.innerHeight)
                break
            }
            e.preventDefault()
        }
    }, false);
    </script>
  </body>
</html>
